{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-empty": [
            "error",
            {"allowEmptyCatch": true}
        ],
        "no-useless-escape": [
            "off"
        ],
        "no-unused-vars": [
            "error",
            {"argsIgnorePattern": "^_"}
        ],
        "no-irregular-whitespace": [
            "error",
            {"skipComments": true}
        ],
        "no-prototype-builtins": [
            "off"
        ]
    }
}
